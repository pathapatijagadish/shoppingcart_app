<h1>User Details</h1>
<% if @user %>
	<p>Name:<%= @user.name %></p>
	<p>Email:<%= @user.email %></p>
	<p>Gender:<%= @user.gender %></p>
	<p>Mobile:<%= @user.mobile_number %></p>
	<p><%= image_tag @user.avatar.url(:medium) %></p>
<%else%>
	<p>Records not found</p>
<%end%>
<%= link_to "Users list",users_path %>